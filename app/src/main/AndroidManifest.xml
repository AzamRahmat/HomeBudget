                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ViewExpensesActivity" />
        <activity android:name=".AddExpensesActivity" />
        <activity android:name=".AddBillsActivity" />
        <activity android:name=".ViewBillsActivity" />
        <activity android:name=".AddIncomeActivity" />
        <activity android:name=".ViewIncomeActivity" />
        <activity android:name=".BudgetMenuActivity" />
        <activity android:name=".AddRentActivity" />
        <activity android:name=".ViewRentActivity" />
        <activity android:name=".AddFoodActivity" />
        <activity android:name=".ViewFoodActivity" />
        <activity android:name=".AddDepartmentalActivity" />
        <activity android:name=".ViewDepartmentalActivity" />
        <activity android:name=".AddEntertainmentActivity" />
        <activity android:name=".ViewEntertainmentActivity" />
        <activity android:name=".AddCarActivity" />
        <activity android:name=".ViewCarActivity" />
        <activity android:name=".AddMedActivity" />
        <activity android:name=".ViewMedActivity" />
        <activity android:name=".TotalAmount" />
        <activity android:name=".AddBudgetActivity" />
        <activity android:name=".ViewBudgetActivity" />
        <activity android:name=".ViewAccountsActivity" />
        <activity android:name=".AddAccountActivity"></activity>
    </application>

</manifest>
