<?xml version=
    "1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".BudgetMenuActivity"
    >

    <!--Home / Rent -->

    <RelativeLayout
        android:id="@+id/rent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/slct_bgt_imgHome"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/home" />

        <TextView
            android:id="@+id/slct_bgt_hometxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Home/Rent"
            android:layout_toRightOf="@+id/slct_bgt_imgHome"
            android:layout_toEndOf="@+id/slct_bgt_imgHome" />


        <TextView
            android:id="@+id/slct_bgt_home_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$200"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toStartOf="@+id/imageView2"
            android:layout_marginRight="36dp"
            android:layout_marginEnd="36dp"
             />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/next"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>


    <!--Food Groceries-->
    <RelativeLayout
        android:id="@+id/food_layout"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/food_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/food" />

    <TextView
        android:id="@+id/food_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Food Groceries"
        android:layout_toRightOf="@+id/food_img"
        android:layout_toEndOf="@+id/food_img" />


    <TextView
        android:id="@+id/slct_bgt_food_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$600"
        android:gravity="center_horizontal"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_toLeftOf="@+id/imageView5"
        android:layout_toStartOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/next"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

        <!--Departmental-->


    <RelativeLayout
        android:id="@+id/dep_layout"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dept_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/groceries" />

        <TextView
            android:id="@+id/dept_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Departmental"
            android:layout_toRightOf="@+id/dept_img"
            android:layout_toEndOf="@+id/dept_img" />

        <TextView
            android:id="@+id/slct_bgt_dept_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$7000"
            android:gravity="center_horizontal"
            android:layout_marginRight="36dp"
            android:layout_marginEnd="36dp"
            android:layout_alignBottom="@+id/imageView56"
            android:layout_toLeftOf="@+id/imageView56"
            android:layout_toStartOf="@+id/imageView56" />

        <ImageView
            android:id="@+id/imageView56"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/next"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <!--Entertainment -->

    <RelativeLayout
        android:id="@+id/ent_layout"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ent_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/entertainment" />

        <TextView
            android:id="@+id/ent_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Entertainment"
            android:layout_toRightOf="@+id/ent_img"
            android:layout_toEndOf="@+id/ent_img" />


        <TextView
            android:id="@+id/slct_bgt_ent_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$6785500"
            android:gravity="center_horizontal"
            android:layout_marginRight="38dp"
            android:layout_marginEnd="38dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView6"
            android:layout_toStartOf="@+id/imageView6" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/next"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>


    <!--Car-->

    <RelativeLayout
        android:id="@+id/car_layout"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/car_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/fuel" />

        <TextView
            android:id="@+id/car_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Car / Auto"
            android:layout_toRightOf="@+id/car_img"
            android:layout_toEndOf="@+id/car_img" />


        <TextView
            android:id="@+id/slct_bgt_car_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$855600"
            android:gravity="center_horizontal"
            android:layout_marginRight="38dp"
            android:layout_marginEnd="38dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView7"
            android:layout_toStartOf="@+id/imageView7" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/next"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>


    <!--Medical-->

    <RelativeLayout
        android:id="@+id/med_layout"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/med_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/medical" />

        <TextView
            android:id="@+id/med_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Medcial"
            android:layout_toRightOf="@+id/med_img"
            android:layout_toEndOf="@+id/med_img" />

        <TextView
            android:id="@+id/slct_bgt_med_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$5600"
            android:gravity="center_horizontal"
            android:layout_marginRight="38dp"
            android:layout_marginEnd="38dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView8"
            android:layout_toStartOf="@+id/imageView8" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/next"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

</LinearLayout>