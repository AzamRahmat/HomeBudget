<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Bill Name"
        android:textSize="30dp"
        android:textColor="#0f2367"
        android:id="@+id/bills_list_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="30dp"
        android:paddingLeft="10dp"
        android:id="@+id/bills_list_date"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/bills_list_name"
        android:layout_toEndOf="@+id/bills_list_name"
        android:textColor="#90465f" />
</RelativeLayout>